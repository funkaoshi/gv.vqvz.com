!!! 5
%html
  %head
    %meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
    %meta(name='viewport' content='width=600')
    %title GROUP VIEWQVZ :: #{@name}
    %link(rel='stylesheet' href='/site.css' type='text/css' media='screen' title='default style sheet')
    %script(type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js')
    %script(type='text/javascript' src='/paging_keys.js')
  %body
    #content
      #header
        %h1 Viewing #{@name}
        %p
          %form(action='/group' method='post')
            %label(for='url') View another group?
            %input#searchbox(type='text' name='url' value='http://flickr.com/groups/onthestreet')
            %input#ok(type='submit' value='OK')
      #images
        %p= nav_links
        %p j/k keys will move between photos (and pages)
        %table
          - @sequence.each do |img|
            .photo.hentry{:id => img.id}
              %a{:href => img.flickr_url}>
                %img{:src => img.img_url}>
        %p= nav_links
      #footer
        %p Site designed and built by <a href="http://funkaoshi.com">Ramanan Sivaranjan</a>.
